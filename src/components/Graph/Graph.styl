@import '../../css/base.styl'

.topBlock {
  background-image: url('../../media/graph.png');
  width: 100%;
  background-repeat-y: no-repeat;
  background-size contain
  flex-grow: 5;
  flex-basis: 50%;

  min-height: 200px;
  background-position: center;
  position: relative
}

.percent {
  font-size: 46px;
  line-height: 40px;
  color: #78a659;
  font-family: "Myriad Pro";
  text-align: center;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%);

  @media (max-width: $small) {
    font-size: 30px;
  }
}