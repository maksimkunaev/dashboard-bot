@import '../css/base.styl'

body,
html {
    width 100%
    height 100%
    background #1d2637
}

* {
    padding 0
    margin 0
    box-sizing border-box
}

:global {
    #root {
        width 100%
        height: 100%;
    }
}

.app {
    color #fff

    margin: 0 auto;
    width: 100%;
    height: 100vh;
    max-width: 100%;
    max-height: 100vh;
}

.container {
    width: 100%
    height: 100%
    display: flex
    font-family: $baseFont;
    flex-direction: column
}

.item {
    flex-basis: 50%;
}

@media screen and (max-width: 1100px)
    .container {
        width 100%
        margin 0 auto
    }


