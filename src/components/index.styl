@import '../css/base.styl'

body,
html {
    width 100%
    height 100%
    background #1d2637
}

* {
    padding 0
    margin 0
    box-sizing border-box
}

:global {
    #root {
        width 100%
        height: 100%;
    }
}

.app {
    width: 100%
    height: 100%
    color #fff

    margin: 0 auto;
    max-width: 1440px;
    max-height: 2960px;

    @media (max-width: 1500px) and (max-height: 3000px){
        max-width: 1440px;
        max-height: 2960px;
    }
    @media (max-width: 800px) and (max-height: 1400px){
        max-width: 750px;
        max-height: 1334px;
    }
}

.container {
    width: 100%
    height: 100%
    display: flex
    font-family: $baseFont;
    flex-direction: column
}

.item {
    flex-basis: 50%;
}

@media screen and (max-width: 1100px)
    .container {
        width 100%
        margin 0 auto
    }


