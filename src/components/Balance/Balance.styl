@import '../../css/base.styl'

.balance {
  text();
  width: 100%;
  font-size: 24px;
  line-height: 1;
  font-weight: bold;
  text-transform: uppercase;
  max-height: 140px;
  padding: 0 0 40px 0;
  @media (max-width: $small) {
    padding: 15px 0
  }
}

.capital {
  @media (max-width: $small) {
    padding: 5px 0;
  }
}

.info {
  justify-content: space-between;
  display: flex;
  flex-wrap: wrap;
  @media (max-width: $small) {
    flex-direction: column
  }
  .tradeBalance {
    text();
    font-size: 75px;
    line-height: 1;
    color: $subColor;
    font-family: "S FU IDisplay";
    font-weight: bold;
    text-align: left;
  }

  .details {
    min-height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 5px 0;
    @media (max-width: $small) {
      align-items: baseline
    }

    .item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      .amount {
        color: $subColor;
      }
      .hIcon {
        width: 25px
        height: auto;
      }
    }
  }
}
