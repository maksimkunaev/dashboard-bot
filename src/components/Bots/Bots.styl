@import '../../css/base.styl'

.bots {
  width: 100%;
  flex-grow: 2;
}

.bot {
  padding: 2px 2px;
  border-radius: 5px;

  flex-grow 1
  height: 100%;

  @media (max-width: $big) {
    height: auto;
    height: 100%;
  }

  @media (max-width: $middle) {
    height: auto;
    height: 100%;
  }

  @media (max-width: $small) {
    height: auto;
    height: 100%;
    margin: 5px;
  }

  @media (max-width: $minSize) {
    width: 140px;
  }

  .botInner {
    text();
    font-size: 20px;

    background: #252d3f;
    height: 100%;
    width: 100%

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;
    padding: 20px;
    border-radius: 5px;

    @media (max-width: $small) {
      padding: 13px;
    }

    .title {
      color: $subColor;
      line-height: 1em
    }

    .green {
      color: #78a659;
    }

    .red {
      color: #d2447b;
    }
  }

  .arrows {
    position: absolute;
    top: 0;
    transform: translateY(-30px);
    z-index: 1;
  }
}

.inner {
  width: 100%;

  flex-grow: 1;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;

  padding: 35px 0
  @media (max-width: $big) {
    padding: 10px 0
  }
}

:global {
  .smooth-dnd-container {
    width: 100%;

    flex-grow: 1;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;

    .smooth-dnd-draggable-wrapper {
      overflow: visible;
    }

    @media (max-width: $small) {
      position: relative;
      min-height: 30px;
      min-width: 30px;
      overflow: scroll;
    }
  }

  .smooth-dnd-container.vertical > .smooth-dnd-draggable-wrapper {
    overflow: visible !important;
    display: block;
    flex-grow: 1;

    flex-basis: 30%;

    @media (max-width: 1500px) and (max-height: 3000px) {
      min-height: 400px;
    }

    @media (max-width: 1200px) {
      min-height: unset;
    }
    @media (max-width: $big) {
      height: auto;
    }

    @media (max-width: $small) {
      flex-grow: unset;
      max-width none
      margin-bottom 2px;
    }
  }
}
