@import '../../css/base.styl'

.bots {
  width: 100%;

  flex-grow: 2;
}
.bot {
  width: 230px;
  height: 209px;
  padding: 2px 0;
  border-radius: 5px;

  @media (max-width: $small) {
    width: 150px;
    height: 140px;
    margin: 5px;
  }

  @media (max-width: $minSize) {
    width: 140px;
  }

  .botInner {
    text();
    font-size: 20px;

    background: #252d3f;
    height: 100%;
    width: 100%

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative
    .title {
      color: $subColor;
      line-height: 1em
    }

    .green {
      color: #78a659;
    }

    .red {
      color: #d2447b;
    }
  }

  .arrows {
    position: absolute;
    top: 0;
    transform: translateY(-30px);
    z-index: 1;
  }
}

.inner {
  width: 100%;

  flex-grow: 1;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

:global {
  .smooth-dnd-container {
    width: 100%;

    flex-grow: 1;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;

    .smooth-dnd-draggable-wrapper {
      overflow: visible;
    }

    @media (max-width: $small) {
      position: relative;
      min-height: 30px;
      min-width: 30px;
      overflow: scroll;
      //flex-wrap: nowrap;
    }
  }

  .smooth-dnd-container.vertical > .smooth-dnd-draggable-wrapper {
    overflow: visible !important;
    display: block;
  }
}
